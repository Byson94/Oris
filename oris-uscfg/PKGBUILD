pkgname="oris-uscfg"
pkgver="0.1"
pkgrel="1"
pkgdesc="Custom configuration and looks for oris desktop environment"
arch=("x86_64")
license=("GPL3")
depend=(
  # core
  "niri"
  "brightnessctl"

  # Utils
  "fuzzel"
  "dunst"

  # Theme
  "adw-gtk-theme"
  "glib2"
  "dconf"
  "papirus-icon-theme"
  "matugen"
)

package() {
  mkdir -p ${pkgdir}/etc/skel/
  cp -r ${srcdir}/.config/ ${pkgdir}/etc/skel/
}
